{
    "id": "light.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "description": "Light data",
    "properties": {
        "name": {"type": "string"},
        "type": {"enum": ["directional", "point"]},
        "colour": {"$ref": "#/colour.json"},
        "distance": {"type": "number"}
    },
    "required": ["name", "type", "colour"]
}